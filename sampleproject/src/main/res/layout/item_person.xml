<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="item" type="geo.metax.sampleproject.Person"/>
    </data>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:background="@drawable/selected_row"
            android:layout_height="wrap_content">

        <TextView android:text="@{item.firstName}" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <TextView android:text="@{item.lastName}" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>
